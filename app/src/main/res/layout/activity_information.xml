<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/background">

    <!-- Carrusel de texto -->
    <TextView
        android:id="@+id/textCarousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informacion de la empresa:"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal" />

    <!-- Cursor con 4 niveles -->
    <SeekBar
        android:id="@+id/levelCursor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="4"
        android:layout_gravity="center_horizontal" />

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <!-- Botón de "Back" o "Back to Home" dependiendo del nivel del cursor -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />

        <!-- Botón de "Next" o "Back" o "Back to Home" dependiendo del nivel del cursor -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next" />

    </LinearLayout>

</LinearLayout>
